{
    id: home_mode_night
    alias: Home Mode: Night
    trigger:
    {
        platform: state
        entity_id: input_select.home_mode
        to: Night
    }
    action:
    [
        {
            service: pyscript.lock_down
        }
        {
            service: pyscript.set_temperature
            data:
            {
                mode: night
            }
        }
    ]
}