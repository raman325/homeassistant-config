{
    id: reload_pyscript_on_change_to_folder
    alias: Reload pyscript on change to folder
    trigger:
    {
        platform: event
        event_type: folder_watcher
    }
    condition: '{{ trigger.event.data.folder == "/config/pyscript" }}'
    action:
    {
        service: pyscript.reload
    }
}